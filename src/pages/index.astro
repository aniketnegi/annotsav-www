---
import "@fontsource-variable/nunito";
import "@fontsource-variable/montserrat";
import "@fontsource/roboto/500.css";

import { Image } from "astro:assets";
import logo from "../imgs/logo.png";
import automation from "../imgs/automation.png";
import irrigation from "../imgs/irrigation.png";
import monitoring from "../imgs/monitoring.png";
import flowchart from "../imgs/flowchart.png";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
	</head>
	<body class="bg-[#E9E9E9]">
		<header>
			<nav>
				<div>
					<span> PROJECT ANNOTSAV </span>
					<span> Let technology nourish the soil </span>
				</div>
				<Image alt="Enactus Logo" src={logo} height={76} width={136} />

				<ul>
					<li>
						<a href="#about">About Us</a>
					</li>
					<li>
						<a href="#team">Team</a>
					</li>
					<li>
						<a href="#contact">Contact Us</a>
					</li>
				</ul>

				<div>
					<button class="">
						<p>REQUEST DEMO</p>
					</button>
				</div>
			</nav>
		</header>
		<main>
			<div class="h-[34rem] w-[88rem] bg-white">
				TODO: Carousel (React or JS?)
			</div>

			<div>
				<div>
					<Image alt="Automation Illustration" src={automation} />
					<span>Automation</span>
					<p>
						Automate the process of watering the plants by using
						weather forecasts and making predictions using
						pre-trained ML models
					</p>
				</div>
				<div>
					<Image alt="Monitoring Illustration" src={monitoring} />
					<span>Remote Monitoring</span>
					<p>
						Using advanced technology you can control watering of
						plants remotely from anywhere
					</p>
				</div>
				<div>
					<Image alt="Irrigation Illustration" src={irrigation} />
					<span>Precise Irrigation</span>
					<p>
						Precisely control the amount of water that is to be
						given to plants
					</p>
				</div>
			</div>

			<section>
				<h2>How (PRODUCT NAME) Works</h2>
				<Image src={flowchart} alt="Flowchart of product function" />
