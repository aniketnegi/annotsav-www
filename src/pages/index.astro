			<section>
				<h2>Team</h2>
				<!-- Member Component -->
				<div>
					<Image
						src="https://xsgames.co/randomusers/avatar.php?g=male"
						alt="Team member photo"
						width={128}
						height={128}
					/>
					<span> John Doe </span>
				</div>
			</section>

			<section>
				<h2>Contact Us</h2>
				<form>
					<div>
						<label for="name">Name</label>
						<input
							type="text"
							name="name"
							id="name"
							placeholder="John Doe"
						/>

						<label for="email">Email ID</label>
						<input
							type="text"
							name="email"
							id="email"
							placeholder="johndoe@email.com"
						/>

						<label for="phone">Phone Number</label>
						<input
							type="text"
							name="phone"
							id="phone"
							placeholder="9087654321"
						/>
					</div>
					<div>
						<label for="message">Message</label>
						<textarea
							name="message"
							id="message"
							placeholder="Send us a beautiful message!"
						></textarea>
					</div>
				</form>
			</section>
		</main>

		<footer>
			<div>
				<span> PROJECT ANNOTSAV </span>
				<span> Designed and developed with ❤️ at NSUT </span>
			</div>
			<Image alt="Enactus Logo" src={logo} height={76} width={136} />
		</footer>
	</body>
</html>
